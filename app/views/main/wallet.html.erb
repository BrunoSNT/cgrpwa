<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-row">
          <div class="m-l-10 align-self-center" style="display: flex; justify-content: space-between; align-items: center;">
            <%= image_tag "focoin.png", style: "height: 61px; width: 50px; object-fit: cover;" %>
            <h2 class="m-t-15 m-l-15">
              $ <%= current_user.coins %></h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-row">
          <div class="round round-lg align-self-center round-success"><i class="ti-wallet"></i></div>
          <div class="m-l-10 align-self-center">
            <h3 class="m-b-0 font-light"><%= number_to_currency(current_user.beneficial_politics) %></h3>
            <h5 class="text-muted m-b-0">Política de Benefícios</h5></div>
        </div>
      </div>
    </div>
  </div>
</div>

<h2>Extratos</h2><hr>
<div class="card">
  <div class="card-body" style="max-height: 20em; overflow-y: auto;">
    <div class="row">
      <% @extracts.each do |extract| %>
        <div class="col-md-4 col-sm-6">
          <div class="card">
            <% if extract.credit? %>
              <i class="fa fa-caret-up" style="position: absolute; bottom: 10px; right: 10px;"></i>
              <div class="card-body" style="background-color: #ccffd8">
                <p><%= extract.description %></p><br>
                <p style="font-weight: 500;">Valor: <%= number_to_currency(extract.value) %></p>
              </div>
            <% else %>
              <i class="fa fa-caret-down" style="position: absolute; bottom: 10px; right: 10px;"></i>
              <div class="card-body" style="background-color: #ffcbba">
                <p><%= extract.description %></p><br>
                <p style="font-weight: 500;">Valor: <%= number_to_currency(extract.value) %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>