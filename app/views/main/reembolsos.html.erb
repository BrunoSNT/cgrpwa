<div class="modal fade modal-xl" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel1">Reembolso</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div id="modalContent">
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-sm-12">
    <div class="row" style="max-height: 25em; overflow-y: auto;">
      <% @repays.each do |repay| %>
        <div class="col-md-6 col-sm-6">
          <div class="card">
            <div class="card-body">
              <%= repay.description %>
              <span class="label label-<%= repay_status_color(repay) %>" style="position: absolute; top: 15px; right: 15px;">
            <%= repay.status.humanize %>
          </span>
              <h4 class="m-t-20"><strong>Valor:</strong> <%= number_to_currency(repay.value) %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4 col-sm-12">

    <div class="card">
      <div class="card-title m-t-20 text-center">
        <h5>O que pode ser pedido?</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 col-sm-6" align="center">
            <%= image_tag "course_icon.svg", class: "repay-icon" %>
            <p class="m-t-10">Cursos</p>
          </div>
          <div class="col-md-6 col-sm-6" align="center">
            <%= image_tag "software_icon.svg", class: "repay-icon" %>
            <p class="m-t-10">Programas Eletrônicos</p>
          </div>
          <div class="col-md-6 col-sm-6 m-t-20" align="center">
            <%= image_tag "event_icon.svg", class: "repay-icon" %>
            <p class="m-t-10">Eventos</p>
          </div>
          <div class="col-md-6 col-sm-6 m-t-20" align="center">
            <%= image_tag "ssd_icon.svg", class: "repay-icon" %>
            <p class="m-t-10">Peças para PC</p>
          </div>
          <div class="col-md-6 col-sm-6 m-t-20" align="center">
            <%= image_tag "capacitation_icon.svg", class: "repay-icon" %>
            <p class="m-t-10">Capacitação</p>
          </div>
          <div class="col-md-6 col-sm-6 m-t-20" align="center">
            <%= image_tag "materials_icon.svg", class: "repay-icon" %>
            <p class="m-t-10">Materiais</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Novo Reembolso', new_repay_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#exampleModal', class: "btn btn-success" } %>