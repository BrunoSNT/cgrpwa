<div class="card">
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Inicial</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cores.each do |core| %>
          <tr>
            <td><%= core.name %></td>
            <td><%= core.description %></td>
            <td><%= core.initial %></td>
            <td><%= link_to 'Ver', core, class: "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_core_path(core), class: "btn btn-warning" %></td>
            <td><%= link_to "<i class='fa fa-trash'></i>".html_safe, core, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'Criar núcleo', new_core_path, class: "btn btn-success" %>
