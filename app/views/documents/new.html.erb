<% if !@document.errors.empty? %>
<div class="alert alert-error">

  <ul>
    <% @document.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>

</div>
<% end %>

<%= form_for @document, html: { multipart: true }, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Qual o documento?" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :file, class:"form-control", placeholder:"Enter password" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
  
<% end %>
